# Conway Bikes Order Monitoring - Environment Configuration
# Copy this file to .env and configure with your actual values

# ============================================
# HOLDED API CONFIGURATION
# ============================================
# Your Holded API key - required
HOLDED_API_KEY=your_holded_api_key_here

# Holded API base URL - optional, defaults to official API
HOLDED_BASE_URL=https://api.holded.com/api

# ============================================
# EMAIL CONFIGURATION
# ============================================
# SMTP server settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Email credentials for sending notifications
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=your_email@example.com

# ============================================
# NOTIFICATION CONFIGURATION
# ============================================
# Email address to receive order notifications
TARGET_EMAIL=recipient@example.com

# ============================================
# TIMEZONE CONFIGURATION
# ============================================
# Timezone for Madrid time operations
TIMEZONE=Europe/Madrid

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Path to CSV file containing bike references
CSV_FILE_PATH=Informaci√≥n_EAN_Conway_2025.xlsx - Stammdaten Conway.csv

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/holded_automation.log

# ============================================
# SCHEDULE CONFIGURATION
# ============================================
# Daily schedule time (for legacy daily runs)
SCHEDULE_HOUR=9
SCHEDULE_MINUTE=0

# Operation hours - automation only runs between these times
OPERATION_START_HOUR=7
OPERATION_END_HOUR=23

# ============================================
# DEVELOPMENT/TESTING CONFIGURATION
# ============================================
# Test mode - enables safe testing without real API calls
TEST_MODE=false

# Test email only - checks email connection without sending real emails
TEST_EMAIL_ONLY=false
